{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "youtube"
        ],
        "lib": [
            "dom",
            "es2015",
            "es5",
            "es6"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}